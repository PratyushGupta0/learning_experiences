<launch>
    <arg name="mav_name" default="firefly"/>
    <arg name="world_name" default="default"/>
    <arg name="gui" default="true"/>

    <group ns="$(arg mav_name)">
        <node name= "dubins_trajectory_node" pkg="trajectory_generation" type="dubins_trajectory_node" output="screen" >
            <rosparam file="$(find trajectory_generation)/cfg/params.yaml" command="load"/>
        </node>
        <node pkg="rviz" type="rviz" name="rviz" args="-d $(find trajectory_generation)/rviz/default.rviz" />
    </group>

    <!-- <include file="$(find iarc_simulation_tools)/launch/default.launch">
